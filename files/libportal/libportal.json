{
    "name": "libportal",
    "buildsystem": "meson",
    "config-opts": [
        "-Dtests=false",
        "-Dbackend-gtk3=disabled",
        "-Dbackend-gtk4=enabled",
        "-Dbackend-qt5=disabled",
        "-Dvapi=false",
        "-Ddocs=false",
        "-Dtests=false",
        "-Dintrospection=false"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/flatpak/libportal/releases/download/0.8.0/libportal-0.8.0.tar.xz",
            "sha256": "ca38cd186e98388e4e92859506c9ecbd01db650ef871838b357b117d147f1541",
            "x-checker-data": {
                "type": "json",
                "url": "https://api.github.com/repos/flatpak/libportal/releases/latest",
                "version-query": ".tag_name",
                "url-query": ".assets[] | select(.name==\"libportal-\" + $version + \".tar.xz\") | .browser_download_url"
            }
        }
    ]
}
